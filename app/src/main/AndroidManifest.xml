<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.miwok">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.miwokapp.PhrasesActivity"
            android:label="@string/category_phrases">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwokapp.MainActivity"/>
        </activity>
        <activity android:name="com.example.android.miwokapp.NumbersActivity"
            android:label="@string/category_numbers">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwokapp.MainActivity"/>
        </activity>
        <activity android:name="com.example.android.miwokapp.FamilyActivity"
            android:label="@string/category_family">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwokapp.MainActivity"/>
        </activity>
        <activity android:name="com.example.android.miwokapp.ColorsActivity"
            android:label="@string/category_colors">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.miwokapp.MainActivity"/>
        </activity>

        <activity android:name="com.example.android.miwokapp.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>